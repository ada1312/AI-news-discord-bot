FROM python:3.9-slim

WORKDIR /app

# Install required packages
RUN pip install --no-cache-dir aiohttp discord.py python-dotenv nltk

# Copy the script
COPY discord_news_bot.py .

# Copy the .env file (make sure to add this to .gitignore)
COPY .env .

# Download NLTK data
RUN python -c "import nltk; nltk.download('punkt'); nltk.download('stopwords')"

# Run the script
CMD ["python", "discord_news_bot.py"]